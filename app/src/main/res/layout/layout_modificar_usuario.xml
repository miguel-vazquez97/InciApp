<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecond"
    tools:context=".ModificarUsuario">

    <ScrollView
        android:id="@+id/scroll_detalle_incidencia"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_ventana_modificar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imagen_registrar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_log"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:id="@+id/linear_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/text_view_correo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textAlignment="textEnd"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/correo_log" />

                <TextView
                    android:id="@+id/correo_text_mod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start"
                    android:textAlignment="textStart"
                    android:inputType="textEmailAddress"
                    />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/linear_contrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">


                <TextView
                    android:id="@+id/text_view_contrasena"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textAlignment="textEnd"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/contra_log"
                    />

                <EditText
                    android:id="@+id/contra_text_mod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/text_view_nombre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textAlignment="textEnd"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/nombre_reg"
                    />


                <EditText
                    android:id="@+id/nombre_text_mod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/text_view_apellido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textAlignment="textEnd"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/apellidos_reg"
                    />

                <EditText
                    android:id="@+id/apellidos_text_mod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_dni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/text_view_dni"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textAlignment="textEnd"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/dni_reg"
                    />


                <EditText
                    android:id="@+id/dni_text_mod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start"
                    android:textAlignment="textStart"
                    android:maxLength="9"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_tlf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/text_view_tlf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textAlignment="textEnd"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/tlf_reg"
                    />

                <EditText
                    android:id="@+id/tlf_text_mod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start"
                    android:textAlignment="textStart"
                    android:inputType="phone"
                    android:maxLength="9"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_departamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_view_departamento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textAlignment="textEnd"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/departamento_modificar"
                    />

                <TextView
                    android:id="@+id/departamento_text_mod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <ProgressBar
                    android:id="@+id/progressbar_boton_modificar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:progressDrawable="@drawable/progressbar_style"
                    />

                <Button
                    android:id="@+id/boton_modificar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/boton_modificar"
                    android:textColor="@color/colorSecond"
                    android:background="@color/colorPrimary"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressbar_modificar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/progressbar_style"
        />

</RelativeLayout>
